@model Payu.Core.Response.PointCheckResponse
@using Payu.Core
@using System.Xml.Linq
@{
    ViewBag.Title = "Puan Sorgu Servisi";
}

<h2>Puan Sorgu Servisi</h2>

<form action="" method="post" class="form-horizontal">
    <fieldset>

        <div class="form-group">
            <label class="col-md-4 control-label" for=""> CC_OWNER:</label>
            <div class="col-md-4">
                <input value="Gokturk Enez" name="owner" class="form-control input-md">

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="">CC_NUMBER</label>
            <div class="col-md-4">
                <input value="4355084355084358" name="cardNumber" class="form-control input-md">

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for=""> EXP_MONTH/EXP_YEAR: </label>
            <div class="col-md-4">
                <input value="12" name="month" class="form-control input-md" width="50px">
                <input value="2018" name="year" class="form-control input-md" width="50px">

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="">  CVC: </label>
            <div class="col-md-4">
                <input value="000" name="cvv" class="form-control input-md">
            </div>
        </div>
    </fieldset>


    <!-- Button -->
    <div class="form-group">
        <label class="col-md-4 control-label" for=""></label>
        <div class="col-md-4">
            <button type="submit" id="" name="" class="btn btn-success">Puan Sorgula</button>
        </div>
    </div>


    <pre>
        @{
         if (Model!=null)
         {
              string formatted = XDocument.Parse(XmlBuilder.GetXMLFromObject(Model)).ToString();
              @Html.Raw(Html.Encode(formatted));
         }
     
        }
</pre>
</form>