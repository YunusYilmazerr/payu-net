@model Payu.WebSamples.Models.IRNResultModel 
@using Payu.Core
@using System.Xml.Linq
@{
    ViewBag.Title = "IrnService";
}

<h2>İptal/İade Servisi (IRN)</h2>



<form action="" method="post" class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
       


        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="">Order Ref</label>
            <div class="col-md-4">
                <input value="39537992" name="orderRef" class="form-control input-md">

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label" for=""> ORDER_AMOUNT:</label>
            <div class="col-md-4">
                <input value="129.33" name="orderAmount" class="form-control input-md">

            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="">  Amount </label>
            <div class="col-md-4">
                <input value="10" name="amount" class="form-control input-md" width="50px">
               

            </div>
        </div>
    </fieldset>


    <!-- Button -->
    <div class="form-group">
        <label class="col-md-4 control-label" for=""></label>
        <div class="col-md-4">
            <button type="submit" id="" name="" class="btn btn-success">IRN Sorgula</button>
        </div>
    </div>


    <pre>
        @{
         if (Model!=null)
         {
                @Model.IRNServiceResponse
         }
     
        }
</pre>
</form>
